<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3ABB8"
    tools:context=".view.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="302dp"
            android:layout_height="117dp"
            android:background="@drawable/round_top_white"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_all_violet"
                android:fontFamily="serif"
                android:padding="10dp"
                android:text="@string/sign_in"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_all_dark_violet"
                android:baselineAligned="false"
                android:fontFamily="serif"
                android:padding="10dp"
                android:text="@string/sign_up"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="302dp"
            android:layout_height="56dp"
            android:layout_below="@id/layout1"
            android:layout_centerHorizontal="true"
            android:background="#FDFAFF"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text"
                android:fontFamily="serif"
                android:hint="E-mail*"
                android:paddingStart="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="302dp"
            android:layout_height="65dp"
            android:layout_below="@id/layout2"
            android:layout_centerHorizontal="true"
            android:background="#FDFAFF"
            android:orientation="vertical">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text"
                android:fontFamily="serif"
                android:hint="Пароль*"
                android:inputType="textPassword"
                android:paddingStart="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="302dp"
            android:layout_height="52dp"
            android:layout_below="@id/layout3"
            android:layout_centerHorizontal="true"
            android:background="#FDFAFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:fontFamily="serif"
                    android:text="Забыли пароль?"
                    android:textColor="#6900BB"
                    android:textSize="22sp"></TextView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="302dp"
            android:layout_height="121dp"
            android:layout_below="@id/layout4"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_down"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="212dp"
                android:layout_height="71dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_all_dark_violet"
                android:fontFamily="serif"
                android:text="@string/enter"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>