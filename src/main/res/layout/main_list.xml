<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3ABB8">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/round_down"
        android:elevation="20dp"
        app:menu="@menu/app_bar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_down"
            android:fontFamily="serif"
            android:hint="Поиск" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_up"
        android:elevation="10dp"
        app:itemIconTint="#000000"
        app:itemTextColor="#000000"
        app:menu="@menu/bottom_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/myToolBar"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation"
            android:layout_below="@id/myToolBar">

            <RelativeLayout
                android:id="@+id/part1"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_top_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:paddingLeft="10dp"
                        android:text="Межрегиональные соревнования по художественной и эстетической гимнастике «ИДЕЛЬ»"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/btnOpen"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:background="#FDFAFF"
                        android:contentDescription="open"
                        android:padding="5dp"
                        android:src="@drawable/ic_down_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout1"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_down"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_accept" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="01.03.2022 - 03.03.2022 "
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/part2"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/part1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_top_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:paddingLeft="10dp"
                        android:text="IV открытые межрегиональные соревнования по художественной гимнастике «ВЕРА В ПОБЕДУ»"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:background="#FDFAFF"
                        android:contentDescription="open"
                        android:padding="5dp"
                        android:src="@drawable/ic_down_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout3"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_down"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_accept" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="03.03.2022 - 06.03.2022"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/part3"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/part2"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:id="@+id/layout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_top_white"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:paddingLeft="10dp"
                        android:text="Первенство России в групповых упражнениях по художественной гимнастике"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:background="#FDFAFF"
                        android:contentDescription="open"
                        android:padding="5dp"
                        android:src="@drawable/ic_down_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout5"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_down"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_accept" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="03.03.2022 - 07.03.2022"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/part4"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/part3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:id="@+id/layout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_top_white"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:paddingLeft="10dp"
                        android:text="Кубок Республики Мордовия по художественной гимнастике"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:background="#FDFAFF"
                        android:contentDescription="open"
                        android:padding="5dp"
                        android:src="@drawable/ic_down_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout7"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_down"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_accept" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="04.03.2022 - 06.03.2022"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/part5"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/part4"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:id="@+id/layout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_top_white"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:paddingLeft="10dp"
                        android:text="Межрегиональные соревнования по художественной гимнастике «Кижанка-2022»"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:background="#FDFAFF"
                        android:contentDescription="open"
                        android:padding="5dp"
                        android:src="@drawable/ic_down_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout9"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_down"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_accept" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="04.03.2022 - 06.03.2022"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>