<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/competition_fragment"
    android:layout_width="345dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="30dp"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingRight="5dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_top_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:paddingLeft="10dp"
            android:text="Межрегиональные соревнования по художественной и эстетической гимнастике «ИДЕЛЬ»"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btnOpen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:background="#FDFAFF"
            android:contentDescription="open"
            android:padding="5dp"
            android:src="@drawable/ic_down_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_down"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_accept" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="01.03.2022 - 03.03.2022 "
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>