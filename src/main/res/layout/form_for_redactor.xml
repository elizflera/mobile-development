<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3ABB8"
    tools:context=".view.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="302dp"
            android:layout_height="117dp"
            android:background="@drawable/round_top_white"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:text="Как зовут президента ВФХГ?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="302dp"
            android:layout_height="56dp"
            android:layout_below="@id/layout1"
            android:layout_centerHorizontal="true"
            android:background="#FDFAFF"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text"
                android:fontFamily="serif"
                android:hint="ФИО*"
                android:paddingStart="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="302dp"
            android:layout_height="65dp"
            android:layout_below="@id/layout3"
            android:layout_centerHorizontal="true"
            android:background="#FDFAFF"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/edit_text"
                android:fontFamily="serif"
                android:hint="Название организации*"
                android:inputType="textPassword"
                android:paddingStart="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout2"
            android:layout_centerHorizontal="true"
            android:background="#FDFAFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:text="Введите название своей организации"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="302dp"
            android:layout_height="121dp"
            android:layout_below="@id/layout4"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_down"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="212dp"
                android:layout_height="71dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_all_dark_violet"
                android:fontFamily="serif"
                android:text="Отправить "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>